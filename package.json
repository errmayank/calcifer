    "repository": "https://github.com/errmayank/calcifer",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "format": "prettier --write \"**/*.{svelte,js,cjs,mjs,ts,cts,mts,json,md,yaml,yml}\"",
        "format-check": "prettier --check \"**/*.{svelte,js,cjs,mjs,ts,cts,mts,json,md,yaml,yml}\"",
        "lint": "eslint . --max-warnings=0",
        "test:unit": "vitest",
        "test": "npm run test:unit -- --run",
        "changeset-add": "changeset add",
        "changeset-status": "changeset status --verbose",
        "changeset-version": "changeset version && pnpm run format",
        "changeset-tag": "changeset tag"
    },
    "devDependencies": {
        "@changesets/cli": "2.27.11",
        "@eslint/compat": "1.2.4",
        "@internationalized/date": "3.6.0",
