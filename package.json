        "@sveltejs/kit": "2.15.1",
        "@sveltejs/vite-plugin-svelte": "5.0.3",
        "autoprefixer": "10.4.20",
        "bits-ui": "1.0.0-next.74",
        "changesets-changelog-compact": "0.1.3",
        "clsx": "2.1.1",
        "eslint": "9.17.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-svelte": "2.46.1",
